{% extends 'base.html.twig' %}

{% block title %}Trader index{% endblock %}

{% block body %}
    <h1>Trader index</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Lastname</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col-3">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trader in traders %}
            <tr>
                <th scope="row">{{ trader.id }}</th>
                <td>{{ trader.name }}</td>
                <td>{{ trader.lastname }}</td>
                <td>{{ trader.user().email }}</td>
                <td>{{ trader.phone }}</td>
                <td>
                    <a class="m-2" href="{{ path('app_trader_show', {'id': trader.id}) }}"><i class="fa-solid fa-eye"></i></a>         
                    <a class="m-2"  href="{{ path('app_trader_edit', {'id': trader.id}) }}"><i class="fa-solid fa-pen"></i></a>
                </td>
                <td>{{ include('trader/_delete_form.html.twig') }}</td>
                <td><a class="btn btn-primary mt-2" href="{{ path('app_trader_articles', {'id': trader.id}) }}">Voir ses articles</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trader_new') }}">Create new</a>
{% endblock %}
