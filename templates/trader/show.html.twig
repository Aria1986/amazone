{% extends 'base.html.twig' %}

{% block title %}Trader{% endblock %}

{% block body %}
    <h1>Trader</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trader.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trader.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ trader.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ trader.user().email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ trader.phone }}</td>
            </tr>

        </tbody>
    </table>

    
    <a class="btn btn-success" href="{{ path('app_trader_edit', {'id': trader.id}) }}">edit</a>

    {{ include('trader/_delete_form.html.twig') }}

    <a class="text-black text-decoration-none " href="{{ path('app_trader_index') }}"><i class="fa-solid fa-arrow-left"></i>back to list</a>

    
{% endblock %}
